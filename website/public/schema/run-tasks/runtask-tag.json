{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "runtask-tag.json",
  "title": "Run Task Result Tag",
  "description": "A label heading with a value, or array of rich values",
  "type": "object",
  "propertyNames": {
    "pattern": "^[A-Za-z_][A-Za-z0-9_]*$"
  },
  "minProperties": 1,
  "maxProperties": 10,
  "patternProperties": {
    "*": {
      "title": "Tag labels with optional colours",
      "type": "array",
      "items": { "$ref": "./runtask-rich-label.json" },
      "minLength": 1,
      "maxLength": 32
    }
  }
}
